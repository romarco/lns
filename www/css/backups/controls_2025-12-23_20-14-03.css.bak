/*
 * Estilos personalizados de layouts
 * Este archivo será sobrescrito con los estilos del layout seleccionado
 * cuando se cree un nuevo formulario desde Mangole Studio
 */

.screen {
    width: 100%;
    min-height: 100%;
    padding: 16px;
}

.screen-content {
    max-width: 100%;
}

/* Estilos por defecto de controles */
.form-group {
    margin-bottom: 16px;
}

.form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #333;
}

.form-control {
    width: 100%;
    padding: 10px 12px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #fff;
}

.btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
}

.btn-primary:active {
    background-color: #0056b3;
}

/* ========================================
   LAWRANCE NETWORK SERVICES - FEED STYLES
   Prefijo: lns-feed-*, lns-card-*, lns-badge-*
   Tema claro y oscuro con media query
   ======================================== */

.mangole-tabmenu-tab.active {
    background: #9ea8b3!important;
    color: white;
}

/* === FEED CONTAINER === */
.lns-feed-loading,
.lns-feed-error,
.lns-feed-empty {
  text-align: center;
  padding: 60px 20px;
  font-size: 16px;
  color: #666;
}

.lns-feed-loading i,
.lns-feed-error i,
.lns-feed-empty i {
  font-size: 48px;
  display: block;
  margin-bottom: 20px;
  color: #667eea;
}

.lns-feed-error {
  color: #e74c3c;
}

.lns-feed-error i {
  color: #e74c3c;
}

.lns-feed-empty p {
  margin-top: 10px;
  font-size: 14px;
}

/* === FEED HEADER === */
.lns-feed-header {
  padding: 20px;
  background: white;
  border-bottom: 2px solid #e0e0e0;
  margin-bottom: 20px;
}

.lns-feed-header h2 {
  margin: 0 0 10px 0;
  font-size: 24px;
  color: #333;
  font-weight: 600;
}

.lns-feed-header h2 i {
  margin-right: 10px;
  color: #667eea;
}

.lns-feed-header p {
  margin: 0;
  font-size: 14px;
  color: #666;
}

/* === CARDS WRAPPER === */
.lns-feed-cards-wrapper {
  padding: 20px;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .lns-feed-cards-wrapper {
    grid-template-columns: 1fr;
    padding: 10px;
  }
}

/* === PROJECT CARD === */
.lns-feed-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.2s, box-shadow 0.2s;
  cursor: pointer;
}

.lns-feed-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

/* === CARD HEADER (BADGES) === */
.lns-card-header {
  display: flex;
  gap: 8px;
  padding: 15px;
  background: #f8f9fa;
  border-bottom: 1px solid #e0e0e0;
}

.lns-badge {
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Prioridades */
.lns-badge-urgent {
  background: #e74c3c;
  color: white;
}

.lns-badge-high {
  background: #f39c12;
  color: white;
}

.lns-badge-medium {
  background: #3498db;
  color: white;
}

.lns-badge-low {
  background: #95a5a6;
  color: white;
}

/* Estados */
.lns-status-published {
  background: #667eea;
  color: white;
}

.lns-status-assigned {
  background: #3498db;
  color: white;
}

.lns-status-in-progress {
  background: #f39c12;
  color: white;
}

.lns-status-completed {
  background: #27ae60;
  color: white;
}

.lns-status-cancelled {
  background: #e74c3c;
  color: white;
}

.lns-status-on-hold {
  background: #95a5a6;
  color: white;
}

/* === CARD TITLE === */
.lns-card-title {
  padding: 15px;
}

.lns-card-title h3 {
  margin: 0 0 8px 0;
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.3;
}

.lns-card-code {
  font-size: 12px;
  color: #7f8c8d;
  font-family: 'Courier New', monospace;
  background: #ecf0f1;
  padding: 2px 8px;
  border-radius: 4px;
}

/* === CARD CLIENT === */
.lns-card-client {
  padding: 0 15px 15px 15px;
}

.lns-card-client-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 6px;
  font-size: 14px;
  color: #555;
}

.lns-card-client-row i {
  color: #667eea;
  width: 16px;
}

/* === CARD COST === */
.lns-card-cost {
  padding: 15px;
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-top: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  font-size: 20px;
  font-weight: 700;
  color: #27ae60;
  display: flex;
  align-items: center;
  gap: 10px;
}

.lns-card-cost i {
  font-size: 18px;
}

/* === CARD TECHNICIANS === */
.lns-card-technicians {
  padding: 15px;
}

.lns-card-section-title {
  font-size: 13px;
  font-weight: 600;
  color: #555;
  margin-bottom: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.lns-card-section-title i {
  margin-right: 6px;
  color: #667eea;
}

.lns-technicians-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.lns-technician-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px;
  background: #f8f9fa;
  border-radius: 8px;
}

.lns-tech-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #667eea;
}

.lns-tech-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #667eea;
  color: white;
  font-size: 16px;
}

.lns-tech-info {
  flex: 1;
}

.lns-tech-name {
  font-size: 14px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 2px;
}

.lns-tech-role {
  font-size: 11px;
  color: #7f8c8d;
  font-weight: 400;
}

.lns-tech-rating {
  font-size: 12px;
  color: #f39c12;
}

.lns-tech-rating i {
  margin-right: 3px;
}

/* === CARD PROGRESS === */
.lns-card-progress {
  padding: 15px;
  border-top: 1px solid #e0e0e0;
}

.lns-progress-label {
  font-size: 13px;
  color: #555;
  margin-bottom: 8px;
  font-weight: 600;
}

.lns-progress-bar {
  height: 8px;
  background: #e0e0e0;
  border-radius: 10px;
  overflow: hidden;
}

.lns-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

/* === CARD TASKS === */
.lns-card-tasks {
  padding: 15px;
  font-size: 13px;
  color: #555;
  background: #f8f9fa;
  border-top: 1px solid #e0e0e0;
}

.lns-card-tasks i {
  margin-right: 8px;
  color: #27ae60;
}

/* === CARD FOOTER === */
.lns-card-footer {
  padding: 15px;
  background: white;
}

.lns-btn-view-detail {
  width: 100%;
  padding: 12px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.lns-btn-view-detail:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.lns-btn-view-detail:active {
  transform: translateY(0);
}

.lns-btn-view-detail i {
  font-size: 12px;
}

/* ========================================
   PROJECT DETAIL SCREEN STYLES
   Prefijo: lns-project-*, lns-task-*
   ======================================== */

/* === CONTENEDOR PRINCIPAL === */
.lns-project-detail {
  padding: 20px;
  max-width: 800px;
  margin: 0 auto;
  padding-bottom: 80px; /* Espacio para botón flotante */
}

/* === INFORMACIÓN DEL PROYECTO === */
.lns-project-info {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.lns-project-badges {
  display: flex;
  gap: 8px;
  margin-bottom: 15px;
}

.lns-project-code {
  font-size: 12px;
  color: #7f8c8d;
  font-family: 'Courier New', monospace;
  background: #ecf0f1;
  padding: 4px 10px;
  border-radius: 4px;
  display: inline-block;
  margin-bottom: 10px;
}

.lns-project-title {
  font-size: 22px;
  font-weight: 600;
  color: #2c3e50;
  margin: 0 0 15px 0;
  line-height: 1.3;
}

.lns-project-description {
  font-size: 14px;
  color: #555;
  line-height: 1.6;
  margin-bottom: 20px;
  padding-bottom: 20px;
  border-bottom: 1px solid #e0e0e0;
}

.lns-project-meta {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.lns-meta-item {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 14px;
  color: #555;
}

.lns-meta-item i {
  color: #667eea;
  width: 20px;
  text-align: center;
}

.lns-meta-item strong {
  color: #2c3e50;
}

/* === SECCIÓN DE TÉCNICOS === */
.lns-project-technicians {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.lns-project-technicians .lns-technicians-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.lns-project-technicians .lns-technician-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 10px;
  background: #f8f9fa;
  border-radius: 8px;
}

.lns-project-technicians .lns-tech-avatar {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #667eea;
  flex-shrink: 0;
}

.lns-project-technicians .lns-tech-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.lns-project-technicians .lns-tech-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #667eea;
  color: white;
  font-size: 20px;
  font-weight: 600;
}

.lns-project-technicians .lns-tech-info {
  flex: 1;
}

.lns-project-technicians .lns-tech-name {
  font-size: 15px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 2px;
}

.lns-project-technicians .lns-tech-role {
  font-size: 12px;
  color: #7f8c8d;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.lns-project-technicians .lns-tech-rating {
  font-size: 13px;
  color: #f39c12;
  margin-top: 4px;
}

.lns-project-technicians .lns-tech-rating i {
  margin-right: 3px;
}

/* === SECCIÓN DE TAREAS === */
.lns-project-tasks {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.lns-section-title {
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  margin: 0 0 20px 0;
  display: flex;
  align-items: center;
  gap: 10px;
}

.lns-section-title i {
  color: #667eea;
}

.lns-tasks-empty {
  text-align: center;
  padding: 40px 20px;
  color: #999;
  font-size: 14px;
}

.lns-tasks-list {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.lns-task-item {
  display: flex;
  align-items: flex-start;
  gap: 12px;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 8px;
  border-left: 4px solid #667eea;
  transition: all 0.2s;
}

.lns-task-item.completed {
  opacity: 0.6;
  border-left-color: #27ae60;
}

.lns-task-item:hover {
  background: #f0f1f3;
}

/* === CHECKBOX PERSONALIZADO === */
.lns-task-checkbox {
  flex-shrink: 0;
  margin-top: 2px;
}

.lns-task-checkbox input[type="checkbox"] {
  display: none;
}

.lns-task-checkbox label {
  display: block;
  width: 24px;
  height: 24px;
  border: 2px solid #667eea;
  border-radius: 6px;
  cursor: pointer;
  position: relative;
  transition: all 0.2s;
}

.lns-task-checkbox input[type="checkbox"]:checked + label {
  background: #27ae60;
  border-color: #27ae60;
}

.lns-task-checkbox input[type="checkbox"]:checked + label:after {
  content: '✔';
  font-family: 'mangoleoutline1';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 14px;
}

.lns-task-checkbox input[type="checkbox"]:disabled + label {
  cursor: not-allowed;
  opacity: 0.7;
}

/* === CONTENIDO DE TAREA === */
.lns-task-content {
  flex: 1;
}

.lns-task-title {
  font-size: 15px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 5px;
}

.lns-task-description {
  font-size: 13px;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8px;
}

.lns-task-completed-info {
  font-size: 12px;
  color: #27ae60;
  display: flex;
  align-items: center;
  gap: 5px;
  margin-top: 8px;
}

.lns-task-completed-info i {
  font-size: 14px;
}

/* === BOTÓN DE DOCUMENTAR === */
.lns-btn-document {
  flex-shrink: 0;
  width: 44px;
  height: 44px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 18px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s, box-shadow 0.2s;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
}

.lns-btn-document:hover {
  transform: scale(1.1);
  box-shadow: 0 4px 16px rgba(102, 126, 234, 0.5);
}

.lns-btn-document:active {
  transform: scale(1.05);
}

.lns-btn-document i {
  font-size: 18px;
}

/* === BOTÓN FLOTANTE DE APLICAR === */
.lns-btn-apply-float {
  position: fixed;
  bottom: 20px;
  right: 20px;
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 24px;
  cursor: pointer;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  transition: transform 0.2s, box-shadow 0.2s;
}

.lns-btn-apply-float:hover {
  transform: translateY(-3px) scale(1.05);
  box-shadow: 0 6px 30px rgba(102, 126, 234, 0.6);
}

.lns-btn-apply-float:active {
  transform: translateY(-1px) scale(1);
}

.lns-btn-apply-float i {
  font-size: 24px;
}

/* Responsive */
@media (max-width: 768px) {
  .lns-project-detail {
    padding: 15px;
    padding-bottom: 80px;
  }
  
  .lns-project-info,
  .lns-project-technicians,
  .lns-project-tasks {
    padding: 15px;
  }
  
  .lns-task-item {
    flex-wrap: wrap;
  }
  
  .lns-btn-document {
    margin-left: auto;
    margin-top: 10px;
  }
  
  .lns-btn-apply-float {
    bottom: 15px;
    right: 15px;
    width: 56px;
    height: 56px;
    font-size: 22px;
  }
}
