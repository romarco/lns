/*
 * Estilos personalizados de layouts
 * Este archivo ser√° sobrescrito con los estilos del layout seleccionado
 * cuando se cree un nuevo formulario desde Mangole Studio
 */

.screen {
    width: 100%;
    min-height: 100%;
    padding: 16px;
}

.screen-content {
    max-width: 100%;
}

/* Estilos por defecto de controles */
.form-group {
    margin-bottom: 16px;
}

.form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: #333;
}

.form-control {
    width: 100%;
    padding: 10px 12px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #fff;
}

.btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 500;
    text-align: center;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
}

.btn-primary:active {
    background-color: #0056b3;
}

/* ========================================
   LAWRANCE NETWORK SERVICES - FEED STYLES
   Prefijo: lns-feed-*, lns-card-*, lns-badge-*
   Tema claro y oscuro con media query
   ======================================== */

/* === FEED CONTAINER === */
.lns-feed-loading,
.lns-feed-error,
.lns-feed-empty {
  text-align: center;
  padding: 60px 20px;
  font-size: 16px;
  color: #666;
}

.lns-feed-loading i,
.lns-feed-error i,
.lns-feed-empty i {
  font-size: 48px;
  display: block;
  margin-bottom: 20px;
  color: #667eea;
}

.lns-feed-error {
  color: #e74c3c;
}

.lns-feed-error i {
  color: #e74c3c;
}

.lns-feed-empty p {
  margin-top: 10px;
  font-size: 14px;
}

/* === FEED HEADER === */
.lns-feed-header {
  padding: 20px;
  background: white;
  border-bottom: 2px solid #e0e0e0;
  margin-bottom: 20px;
}

.lns-feed-header h2 {
  margin: 0 0 10px 0;
  font-size: 24px;
  color: #333;
  font-weight: 600;
}

.lns-feed-header h2 i {
  margin-right: 10px;
  color: #667eea;
}

.lns-feed-header p {
  margin: 0;
  font-size: 14px;
  color: #666;
}

/* === CARDS WRAPPER === */
.lns-feed-cards-wrapper {
  padding: 20px;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 20px;
  max-width: 1400px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .lns-feed-cards-wrapper {
    grid-template-columns: 1fr;
    padding: 10px;
  }
}

/* === PROJECT CARD === */
.lns-feed-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.2s, box-shadow 0.2s;
  cursor: pointer;
}

.lns-feed-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

/* === CARD HEADER (BADGES) === */
.lns-card-header {
  display: flex;
  gap: 8px;
  padding: 15px;
  background: #f8f9fa;
  border-bottom: 1px solid #e0e0e0;
}

.lns-badge {
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Prioridades */
.lns-badge-urgent {
  background: #e74c3c;
  color: white;
}

.lns-badge-high {
  background: #f39c12;
  color: white;
}

.lns-badge-medium {
  background: #3498db;
  color: white;
}

.lns-badge-low {
  background: #95a5a6;
  color: white;
}

/* Estados */
.lns-status-published {
  background: #667eea;
  color: white;
}

.lns-status-assigned {
  background: #3498db;
  color: white;
}

.lns-status-in-progress {
  background: #f39c12;
  color: white;
}

.lns-status-completed {
  background: #27ae60;
  color: white;
}

.lns-status-cancelled {
  background: #e74c3c;
  color: white;
}

.lns-status-on-hold {
  background: #95a5a6;
  color: white;
}

/* === CARD TITLE === */
.lns-card-title {
  padding: 15px;
}

.lns-card-title h3 {
  margin: 0 0 8px 0;
  font-size: 18px;
  font-weight: 600;
  color: #2c3e50;
  line-height: 1.3;
}

.lns-card-code {
  font-size: 12px;
  color: #7f8c8d;
  font-family: 'Courier New', monospace;
  background: #ecf0f1;
  padding: 2px 8px;
  border-radius: 4px;
}

/* === CARD CLIENT === */
.lns-card-client {
  padding: 0 15px 15px 15px;
}

.lns-card-client-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 6px;
  font-size: 14px;
  color: #555;
}

.lns-card-client-row i {
  color: #667eea;
  width: 16px;
}

/* === CARD COST === */
.lns-card-cost {
  padding: 15px;
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  border-top: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0;
  font-size: 20px;
  font-weight: 700;
  color: #27ae60;
  display: flex;
  align-items: center;
  gap: 10px;
}

.lns-card-cost i {
  font-size: 18px;
}

/* === CARD TECHNICIANS === */
.lns-card-technicians {
  padding: 15px;
}

.lns-card-section-title {
  font-size: 13px;
  font-weight: 600;
  color: #555;
  margin-bottom: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.lns-card-section-title i {
  margin-right: 6px;
  color: #667eea;
}

.lns-technicians-list {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.lns-technician-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px;
  background: #f8f9fa;
  border-radius: 8px;
}

.lns-tech-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid #667eea;
}

.lns-tech-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #667eea;
  color: white;
  font-size: 16px;
}

.lns-tech-info {
  flex: 1;
}

.lns-tech-name {
  font-size: 14px;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 2px;
}

.lns-tech-role {
  font-size: 11px;
  color: #7f8c8d;
  font-weight: 400;
}

.lns-tech-rating {
  font-size: 12px;
  color: #f39c12;
}

.lns-tech-rating i {
  margin-right: 3px;
}

/* === CARD PROGRESS === */
.lns-card-progress {
  padding: 15px;
  border-top: 1px solid #e0e0e0;
}

.lns-progress-label {
  font-size: 13px;
  color: #555;
  margin-bottom: 8px;
  font-weight: 600;
}

.lns-progress-bar {
  height: 8px;
  background: #e0e0e0;
  border-radius: 10px;
  overflow: hidden;
}

.lns-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

/* === CARD TASKS === */
.lns-card-tasks {
  padding: 15px;
  font-size: 13px;
  color: #555;
  background: #f8f9fa;
  border-top: 1px solid #e0e0e0;
}

.lns-card-tasks i {
  margin-right: 8px;
  color: #27ae60;
}

/* === CARD FOOTER === */
.lns-card-footer {
  padding: 15px;
  background: white;
}

.lns-btn-view-detail {
  width: 100%;
  padding: 12px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.lns-btn-view-detail:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.lns-btn-view-detail:active {
  transform: translateY(0);
}

.lns-btn-view-detail i {
  font-size: 12px;
}

/* ========================================
   DARK MODE (TEMA OSCURO)
   ======================================== */

@media (prefers-color-scheme: light) {
  
  .lns-feed-header {
    background: #1e1e1e;
    border-bottom-color: #333;
  }
  
  .lns-feed-header h2 {
    color: #e0e0e0;
  }
  
  .lns-feed-header p {
    color: #aaa;
  }
  
  .lns-feed-loading,
  .lns-feed-empty {
    color: #aaa;
  }
  
  .lns-feed-card {
    background: #2a2a2a;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.4);
  }
  
  .lns-feed-card:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.6);
  }
  
  .lns-card-header {
    background: #1e1e1e;
    border-bottom-color: #444;
  }
  
  .lns-card-title h3 {
    color: #e0e0e0;
  }
  
  .lns-card-code {
    background: #3a3a3a;
    color: #aaa;
  }
  
  .lns-card-client-row {
    color: #bbb;
  }
  
  .lns-card-cost {
    background: linear-gradient(135deg, #667eea25 0%, #764ba225 100%);
    border-top-color: #444;
    border-bottom-color: #444;
    color: #4caf50;
  }
  
  .lns-card-section-title {
    color: #bbb;
  }
  
  .lns-technician-item {
    background: #1e1e1e;
  }
  
  .lns-tech-name {
    color: #e0e0e0;
  }
  
  .lns-tech-role {
    color: #888;
  }
  
  .lns-card-progress {
    border-top-color: #444;
  }
  
  .lns-progress-label {
    color: #bbb;
  }
  
  .lns-progress-bar {
    background: #444;
  }
  
  .lns-card-tasks {
    background: #1e1e1e;
    border-top-color: #444;
    color: #bbb;
  }
  
  .lns-card-footer {
    background: #2a2a2a;
  }
  
  .lns-btn-view-detail:hover {
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.6);
  }
}
